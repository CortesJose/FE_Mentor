---
import Shead from "../pages/components/Shead.astro";
import Scards from "./components/Scards.astro";
import Sfooter from "./components/Sfooter.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Shead title="Frontend Mentor | Social proof section" />
  </head>
  <body>
      <header class="header">
        <h1 class="header__title">10,000+ of our users love our products.</h1>
        <p class="header__info">
          We only provide great products combined with excellent customer
          service. See what our satisfied customers are saying about our
          services.
        </p>
      </header>

      <section class="container">
        <div class="container__stars container__stars--start">
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <h4>Rated 5 Stars in Reviews</h4>
        </div>
        <div class="container__stars container__stars--center">
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <h4>Rated 5 Stars in Report Guru</h4>
        </div>
        <div class="container__stars container__stars--end">
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <h4>Rated 5 Stars in BestTech</h4>
        </div>
      </section>

      <section class="cards">
        <Scards></Scards>
      </section>

    <footer>
      <Sfooter></Sfooter>
    </footer>
  </body>
</html>
