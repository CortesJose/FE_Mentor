        <div class="starts-container__report starts-container__report--center">
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
          <img src="/public/icon-star.svg" alt="star" />
